@model Payrollfix_poc.Models.Timesheet

@{
	ViewBag.Title = "Edit Timesheet";
}
@{
	Layout = "~/views/Shared/_EmployeeLayout.cshtml";
	string name = ViewBag.PartialView;
}
<div class="container">
	<div class="row">
		<div class="col-lg-2 col-md-3 col-12">
			@await Html.PartialAsync(name)
		</div>
		<!-- Employee Search Form -->
		<div class="col-lg-10 col-md-9 col-12">
			<h2>Edit Timesheet</h2>

			<form asp-action="Edit" method="post">
				<input type="hidden" asp-for="TimesheetId" />
				<div class="form-group">
					<label for="Date">Date</label>
					<input asp-for="Date" class="form-control" />
					<span asp-validation-for="Date" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="HoursWorked">Hours Worked</label>
					<input asp-for="HoursWorked" class="form-control" />
					<span asp-validation-for="HoursWorked" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label for="Description">Description</label>
					<textarea asp-for="Description" class="form-control"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
				<a asp-action="TimesheetList" class="btn btn-secondary">Cancel</a>
			</form>
		</div>
	</div>
</div>
