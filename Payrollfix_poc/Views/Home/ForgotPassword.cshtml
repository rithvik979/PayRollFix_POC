@model Payrollfix_poc.ViewModels.ForgotPasswordViewModel


<div class="forgot-password-container" style="background-color: #e5f8ff; padding: 40px; width: 400px; margin: 100px auto; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
    <h2 style="text-align: center; color: #1da1f2;">Forgot Password</h2>
    <form asp-action="ForgotPassword" method="post" style="text-align: center;">
        <div class="form-group">
            <label for="Email" style="font-weight: bold;">Enter your registered email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter email" required style="width: 100%; margin-top: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
        </div>
        <p style="font-size: 12px;">We will send a Reset Password link to your email</p>
        <button type="submit" class="btn btn-primary" style="width: 100%; background-color: #ff5b5b; padding: 10px; font-weight: bold; border: none; border-radius: 5px;">Continue</button>
    </form>
</div>

<style>
    .forgot-password-container {
        max-width: 400px;
        margin: 0 auto;
    }
</style>
