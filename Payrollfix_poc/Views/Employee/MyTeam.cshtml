@model IEnumerable<Payrollfix_poc.Models.Employee>
@{
	Layout = "~/views/Shared/_EmployeeLayout.cshtml";
}

<div class="container">
	<div class="row2">
		<div class="col-lg-10 col-md-9 col-12">
			<h2 class="text-center">Employees Reporting to You</h2>
			<div class="flox">
			@foreach (var employee in Model)
			{
				<div class="col-md-4">
					<div class="card text-center" style="width: 18rem; margin-bottom: 20px;">
							<img src="@Url.Action("GetImageById", "Home", new {employeeId = employee.EmployeeId })" class="card-img-top" alt="Employee Image">
						<div class="card-body">
							<h5 class="card-title">@employee.FirstName @employee.LastName</h5>
							<p class="card-text">Employee ID: @employee.EmployeeId</p>
							<p class="card-text">Joining Date: @employee.JoinDate.ToString("d MMM yyyy")</p>
							<p>Status: <span class="badge badge-success">Active</span></p>
							<a href="@Url.Action("Permission", "Leave", new { employeeId = employee.EmployeeId })" class="btn btn-primary">Leaves</a>
							<a href="@Url.Action("Permission", "Timesheet", new { employeeid = employee.EmployeeId })" class="btn btn-secondary">View Timesheet</a>
						</div>
					</div>
				</div>
			}
			</div>
		</div>
	</div>
</div>
	<style>
		.flox{
			flex-wrap: wrap;
			display : flex;
			flex-direction:row;
		}
		.card {
			box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
			transition: 0.3s;
			border-radius: 10px;
		}

			.card:hover {
				box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.3);
			}

		.card-img-top {
			width: 100%;
			height: 200px;
			object-fit: cover;
			border-radius: 10px 10px 0 0;
		}

		.badge-success {
			background-color: #28a745;
			padding: 5px 10px;
			font-size: 0.9rem;
			border-radius: 5px;
		}
	</style>
