@model List<Payrollfix_poc.Models.LoginActivity>
@{
	Layout = "~/views/Shared/_EmployeeLayout.cshtml";
}
<div class="container">
	<div class="row">
		<!-- Left Navigation -->
		<div class="col-lg-2 col-md-3 col-12">
			@await Html.PartialAsync("_NavbarPartial")  <!-- Include your navbar -->
		</div>
		<!-- Employee Details Section -->
		<div class="col-lg-10 col-md-9 col-12">
			<table class="table">
				<thead>
					<tr>
						<th>Login Time</th>
						<th>Logout Time</th>
						<th>Duration</th>
					</tr>
				</thead>
				<tbody>
					@if(Model != null){
						@foreach (var activity in Model)
						{
							<tr>
								<td>@activity.LoginTime.ToString("g")</td>
								<td>@activity.LogoutTime?.ToString("g")</td>
								<td>
									@if (activity.LogoutTime.HasValue)
									{
										TimeSpan duration = activity.LogoutTime.Value - activity.LoginTime;
										@duration.ToString("hh\\:mm\\:ss")
									}
									else
									{
										<span>--</span>
									}
								</td>
							</tr>
						}
					}
					else
					{
						<p>Model not thier</p>
					}
				</tbody>
				</table>
			</div>
		</div>
	</div>

<style>
	.table {
		width: 100%;
		margin-top: 15px;
		border-collapse: separate;
		border-spacing: 0 10px; /* Add spacing between rows */
	}

		.table th {
			font-weight: bold;
			color: #666;
			text-align: left;
		}

		.table td {
			background-color: white;
			padding: 10px;
			border-radius: 8px;
		}
</style>