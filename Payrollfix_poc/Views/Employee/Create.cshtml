@model Payrollfix_poc.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary text-center mb-4">Create Employee</h1>

<div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
        <h4>Employee Details</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>

            <div class="form-row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter email" />
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Phone_no" class="control-label"></label>
                        <input asp-for="Phone_no" class="form-control" placeholder="Enter phone number" />
                        <span class="text-danger" asp-validation-for="Phone_no"></span>
                    </div>
                </div>
            </div>

            <div class="form-row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter address" />
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DOB" class="control-label"></label>
                        <input asp-for="DOB" class="form-control" placeholder="Enter date of birth" />
                        <span class="text-danger" asp-validation-for="DOB"></span>
                    </div>
                </div>
            </div>

            <div class="form-row mb-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Gender" class="control-label"></label>
                        <select asp-for="Gender" class="form-control">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="JoinDate" class="control-label"></label>
                        <input asp-for="JoinDate" class="form-control" placeholder="Enter joining date" />
                        <span class="text-danger" asp-validation-for="JoinDate"></span>
                    </div>
                </div>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-success btn-lg px-5" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Details" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}