@model IEnumerable<Payrollfix_poc.Models.Employee>
@{
    Layout = "~/views/Shared/_EmployeeLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <!-- Navbar (Partial View) -->
        @await Html.PartialAsync("_NavbarPartial")

        <!-- Employee Search Form -->
        <div class="col-md-10">
            <form asp-action="Organization" method="get" class="">
                <div class="form-group">
                    <input type="text" name="name" class="form-control mr-2" placeholder="Enter Employee Name" value="@ViewBag.SearchTerm">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            <div class="mb-3">
                <a asp-action="OrganizationChart" class="btn btn-primary">ORG Tree</a>
            </div>

            <!-- Show error message if no employee is found -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <!-- Display All Employees in Blocks (Cards) -->
            <div class="row">
                @foreach (var employee in Model)
                {
                    string imagepath = Url.Content("~/images/Employees/"+@employee.EmployeeId+".jpg");
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body text-center">
                                <img src= @imagepath class="rounded-circle mb-3" alt="Employee Image" style="width:100px;">
                                <h5 class="card-title">@employee.FirstName @employee.LastName</h5>
                                <p class="text-muted">
                                    @employee.Position?.PositionDescription ?? "Not Assigned"
                                </p>
                                <p class="text-muted">
                                    @employee.Department?.DeptDescription ?? "Department Not Assigned"
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS to match color scheme -->
<style>
    .card {
        border-radius: 10px;
        background-color: #f8f9fa;
    }

    .card-title {
        color: #007bff;
        font-weight: 600;
    }

    .card img {
        border-radius: 50%;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }
</style>
