@model Payrollfix_poc.Models.Employee
@{
	Layout = "~/views/Shared/_EmployeeLayout.cshtml";
}

<div class="container">
	<div class="row">
		<!-- Left Navigation -->
		@await Html.PartialAsync("_NavbarPartial")  <!-- Include your navbar -->
		<!-- Employee Details Section -->
		@{
			string imagepath = Url.Content("~/images/Employees/"+Model.EmployeeId+".jpg");
		}
		<div class="col-md-10">
			<div class="employee-details-card">
				<div class="employee-header">
					<div class="profile-image">
						<img src=@imagepath alt="Profile Picture" />
					</div>
					<div class="employee-info">
						<h2>@Model.FirstName @Model.LastName</h2>
						<p>@Model.EmployeeId</p>
					</div>
				</div>

				<div class="card-section">
					<h4>Basic Information</h4>
					<div class="row">
						<div class="col-md-6">
							<p><strong>Employee ID:</strong> @Model.EmployeeId</p>
							<p><strong>Role:</strong> @Model.Position?.ToString()</p> <!-- Use null-conditional operator -->
							<p><strong>Department:</strong> @Model.Department?.Name</p>
							<p><strong>Date of Birth:</strong> @Model.DOB.ToShortDateString()</p>
						</div>
						<div class="col-md-6">
@* 							<p><strong>Team Lead:</strong> @Model.employee?.FirstName @Model.employee?.LastName ?? "N/A"</p> <!-- Manager's name -->
 *@							<p><strong>CTC:</strong> 45 LPA</p> <!-- This should ideally come from your model -->
							<p><strong>Date of Joining:</strong> @Model.JoinDate.ToShortDateString()</p>
						</div>
					</div>
				</div>

				<div class="card-section">
					<h4>Contact Information</h4>
					<div class="row">
						<div class="col-md-6">
							<p><strong>Email:</strong> @Model.Email</p>
							<p><strong>Phone:</strong> @Model.Phone_no</p>
						</div>
						<div class="col-md-6">
							<p><strong>Address:</strong> @Model.Address, Hyderabad, Telangana, 500009</p>
							<p><strong>Country:</strong> India</p>
						</div>
					</div>
				</div>

				<div class="card-section">
					<h4>Applied Leaves</h4>
					<table class="table leave-table">
						<thead>
							<tr>
								<th>Leave Type</th>
								<th>StartDate</th>
								<th>EndDate</th>
								<th>No. of Days</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody>
							@if (Model.Leaves != null && Model.Leaves.Any())
							{
								foreach (var leave in Model.Leaves)
								{
									DateTime end = leave.EndDate;
									String diff=leave.StartDate.Subtract(end).ToString(@"dd");
									<tr>
										<td>@leave.LeaveType</td> <!-- Assuming LeaveType is a property of LoginActivity -->
										<td>@leave.StartDate.ToShortDateString()</td>
										<td>@leave.EndDate.ToShortDateString()</td> <!-- Update based on your Leave model -->
										<td>@diff days</td> <!-- Update based on your Leave model -->
										<td>
											@if (leave.Status.ToString() == "Accepted")
											{
												<span>Approved</span>
											}
											else if (leave.Status.ToString() == "Pending")
											{
												<span>Pending</span>
											}
											else if (leave.Status.ToString() == "Denied")
											{
												<span>Denied</span>
											}
										</td>
									</tr>
								}
							}
							else
							{
								<tr>
									<td colspan="4">No applied leaves found.</td>  <!-- Message if no leaves -->
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

