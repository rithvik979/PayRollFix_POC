@model Payrollfix_poc.Models.Employee

<div class="container">
    <div class="row">
        <!-- Left Navigation -->
        @await Html.PartialAsync("_NavbarPartial")

        <!-- Employee Details Section -->
        <!-- Employee Details Section -->
        <div class="col-md-10">
            <div class="employee-details-card">
                <div class="employee-header">
                    <div class="profile-image">
                        <img src="~/images/profile_placeholder.jpg" alt="Profile Picture" />
                    </div>
                    <div class="employee-info">
                        <h2>@Model.FirstName @Model.LastName</h2>
                        <p>@Model.EmployeeId</p>
                    </div>
                </div>

                <div class="card-section">
                    <h4>Basic Information</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Employee ID:</strong> @Model.EmployeeId</p>
                            <p><strong>Role:</strong> @Model.Position</p>
                            <p><strong>Date of Birth:</strong> @Model.DOB.ToShortDateString()</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Team Lead:</strong> Manger</p>
                            <p><strong>CTC:</strong> 45 LPA</p>
                            <p><strong>Date of Joining:</strong> @Model.JoinDate.ToShortDateString()</p>
                        </div>
                    </div>
                </div>

                <div class="card-section">
                    <h4>Contact Information</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Email:</strong> @Model.Email</p>
                            <p><strong>Phone:</strong> @Model.Phone_no</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Address:</strong> @Model.Address, Hyderabad, Telangana, 500009</p>
                            <p><strong>Country:</strong> India</p>
                        </div>
                    </div>
                </div>

                <div class="card-section">
                    <h4>Applied Leaves</h4>
                    <table class="table leave-table">
                        <thead>
                            <tr>
                                <th>Leave Type</th>
                                <th>Duration</th>
                                <th>No. of Days</th>
                                <th>Status</th>
                            </tr>
                        </thead>
@*                         <tbody>
                            @foreach (var leave in Model.Leaves)
                            {
                                <tr>
                                    <td>@leave.Type</td>
                                    <td>@leave.StartDate.ToShortDateString() - @leave.EndDate.ToShortDateString()</td>
                                    <td>@leave.NumberOfDays</td>
                                    <td>
                                        @if (leave.Status == "Approved")
                                        {
                                            <span class="badge badge-success">Approved</span>
                                        }
                                        else if (leave.Status == "Pending")
                                        {
                                            <span class="badge badge-warning">Pending</span>
                                        }
                                        else if (leave.Status == "Denied")
                                        {
                                            <span class="badge badge-danger">Denied</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody> *@
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styling (if required) -->
<!-- Styling for Employee Details Page -->
<style>
    /* Container */
    .container {
        padding: 20px;
        font-family: 'Arial', sans-serif;
    }

    /* Sidebar */
    .sidebar {
        background-color: #2c3e50;
        padding: 15px;
        border-radius: 8px;
    }

    .menu-item {
        display: block;
        color: white;
        padding: 10px;
        margin-bottom: 5px;
        text-decoration: none;
        border-radius: 6px;
    }

        .menu-item.active, .menu-item:hover {
            background-color: #3498db;
        }

        .menu-item.logout {
            background-color: #e74c3c;
            margin-top: 20px;
        }

    /* Employee Details Card */
    .employee-details-card {
        background-color: white;
        padding: 20px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    /* Header Section */
    .employee-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-image img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        margin-right: 20px;
        border: 2px solid #3498db;
    }

    .employee-info h2 {
        margin: 0;
        font-size: 24px;
        color: #2c3e50;
    }

    .employee-info p {
        margin: 0;
        font-size: 14px;
        color: #7f8c8d;
    }

    /* Card Section */
    .card-section {
        padding: 15px;
        background-color: #f9f9f9;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.1);
    }

        .card-section h4 {
            margin-bottom: 15px;
            color: #34495e;
        }

    /* Table Styling */
    .leave-table {
        width: 100%;
        margin-top: 10px;
    }

        .leave-table th, .leave-table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .leave-table th {
            background-color: #ecf0f1;
            color: #34495e;
        }

        .leave-table td {
            background-color: #fff;
        }

    /* Status Styling */
    .status {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 12px;
        color: white;
    }

        .status.approved {
            background-color: #27ae60;
        }

        .status.pending {
            background-color: #f39c12;
        }

        .status.denied {
            background-color: #e74c3c;
        }
</style>
