@model Payrollfix_poc.ViewModels.ResetPasswordViewModel
@{
	Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="container">
	<div class="row2">
		<div class="col-lg-10 col-md-9 col-12">
			<div class="reset-password-container" style="background-color: #e5f8ff; padding: 40px; width: 400px; margin: 100px auto; border-radius: 10px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
				<h2 style="text-align: center; color: #1da1f2;">Reset Password</h2>
				<form asp-action="ResetPassword" method="post" style="text-align: center;">
					<div class="form-group">
						<label for="OldPassword" style="font-weight: bold;">Old Password</label>
						<input type="password" asp-for="OldPassword" class="form-control" placeholder="Enter old password" required style="width: 100%; margin-top: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
					</div>
					<div class="form-group">
						<label for="NewPassword" style="font-weight: bold;">New Password</label>
						<input type="password" asp-for="NewPassword" class="form-control" placeholder="Enter new password" required style="width: 100%; margin-top: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
					</div>
					<div class="form-group">
						<label for="ConfirmPassword" style="font-weight: bold;">Confirm New Password</label>
						<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" required style="width: 100%; margin-top: 10px; padding: 10px; border: 1px solid #ccc; border-radius: 5px;">
					</div>
					<button type="submit" class="btn btn-primary" style="width: 100%; background-color: #ff5b5b; padding: 10px; font-weight: bold; border: none; border-radius: 5px;">Reset Password</button>
				</form>
			</div>
		</div>
	</div>
</div>
<style>
	.reset-password-container {
		max-width: 400px;
		margin: 0 auto;
	}
</style>
